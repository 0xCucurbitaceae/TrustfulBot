{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "outDir": "build",
    "rootDir": "src"
  },
  "include": ["src/**/*", "api/webhook.ts", "src/env.ts"],
  "exclude": ["node_modules"]
}
